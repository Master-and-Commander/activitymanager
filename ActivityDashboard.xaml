<Page x:Class="Octopus.ActivityDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Octopus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Activity Dashboard" Loaded="Page_Loaded">

    <Grid>
        
        <Grid.Resources>
            <!-- Activity Data -->
            <XmlDataProvider x:Key="ActivityDataSource" XPath="Activities">
                <x:XData>
                    <Activities xmlns="">
                        <Activity Name="Networking Reading" AskRate="Daily" Type="time"  Goal="5"  ID ="1" />
                        <Activity Name="Python Programming" AskRate="Daily" Type="time" Goal="5"  ID ="2" />
                        <Activity Name="C# Programming" AskRate="Daily" Type="time" Goal="5"  ID ="3" />
                    </Activities>
                    
                </x:XData>
            </XmlDataProvider>
            
            <!-- Quiz Data -->
            <XmlDataProvider x:Key="QuizDataSource" XPath="Quizzes">
                <x:XData>
                    <Quizzes xmlns="">
                        <Quiz Name="Networking"  />
                        <Quiz Name="German" />
                        <Quiz Name="Songs" />
                    </Quizzes>
                </x:XData>
            </XmlDataProvider>
            
            <DataTemplate x:Key="nameItemTemplate">
                <Label Content="{Binding XPath=@Name}"/>
            </DataTemplate>
        </Grid.Resources>

        <Grid.Background>
            <SolidColorBrush Color="#38383A"/>

        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Quizzes</Label>
        </Border>

        <DataGrid Grid.Column="0" Grid.Row="0" Name="dataGrid1" />

        <ListBox Name="quizListBox" Grid.Column="0" Grid.Row="2" 
         ItemsSource="{Binding Source={StaticResource QuizDataSource}, XPath=Quiz}"
         ItemTemplate="{StaticResource nameItemTemplate}">
        </ListBox>

        <Border Grid.Column="1" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Activities</Label>
        </Border>
        <ListBox Name="peopleListBox" Grid.Column="1" Grid.Row="2" 
         ItemsSource="{Binding Source={StaticResource ActivityDataSource}, XPath=Activity}"
         ItemTemplate="{StaticResource nameItemTemplate}">
        </ListBox>


        <!-- View report button -->

        <StackPanel  Grid.Column="1" Grid.Row="3"  Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="View_Activity_Click">View Activity</Button>
            <Button Click="Edit_Quiz_Click">Edit Quiz</Button>
            <Button Click="Take_Quiz_Click">Take Quiz</Button>
            <Button Click="Add_Quiz_Click">Add Quiz</Button>
        </StackPanel>

        <Label Grid.Column="1" Style="{StaticResource headerTextStyle}">
            Activity Dashboard
        </Label>

    </Grid>
</Page>
