<Page x:Class="Octopus.ActivityDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Octopus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Activity Dashboard">

    <Grid>
        <Grid.Resources>
            <!-- Activity Data -->
            <XmlDataProvider x:Key="ActivityDataSource" XPath="Activities">
                <x:XData>
                    <Activities xmlns="">
                        <Activity Name="Networking Reading" AskRate="Daily" Type="time"  Goal="5"  ID ="1" />
                        <Activity Name="Python Programming" AskRate="Daily" Type="time" Goal="5"  ID ="2" />
                        <Activity Name="C# Programming" AskRate="Daily" Type="time" Goal="5"  ID ="3" />
                        <Activity Name="Pullups" AskRate="Monthly" Type="goal" Goal="5"  ID ="4" />
                    </Activities>
                </x:XData>
            </XmlDataProvider>
            
            <!-- Quiz Data -->
            <XmlDataProvider x:Key="QuizDataSource" XPath="Quizzes">
                <x:XData>
                    <Quizzes xmlns="">
                        <Quiz Name="Networking" AskRate="Daily" Type="time"  Goal="5"  ID ="1" />
                        <Quiz Name="German" AskRate="Daily" Type="time" Goal="5"  ID ="2" />
                        <Quiz Name="Songs" AskRate="Daily" Type="time" Goal="5"  ID ="3" />
                    </Quizzes>
                </x:XData>
            </XmlDataProvider>
            <DataTemplate x:Key="nameItemTemplate">
                <Label Content="{Binding XPath=@Name}"/>
            </DataTemplate>
        </Grid.Resources>

        <Grid.Background>
            <SolidColorBrush Color="#38383A"/>

        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Activities</Label>
        </Border>
        <ListBox Name="peopleListBox" Grid.Column="1" Grid.Row="2" 
         ItemsSource="{Binding Source={StaticResource ActivityDataSource}, XPath=Activity}"
         ItemTemplate="{StaticResource nameItemTemplate}">
        </ListBox>


        <!-- View report button -->



        <Label Grid.Column="1" Style="{StaticResource headerTextStyle}">
            View Activity Details
        </Label>

        <!-- View report button -->
        <Button Grid.Column="1" Grid.Row="3" Click="View_Activity_Click" Style="{StaticResource buttonStyle}">View</Button>
    </Grid>
</Page>
